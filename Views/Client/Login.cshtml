@model dotn.Models.UserModel;
 <section class="background-radial-gradient ">
    <div class=" container text-center text-lg-start ">
    <div class="row align-items-center mb-5">
    <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
    The best offer <br />
    <span style="color: hsl(218, 81%, 75%)">for your business</span>
    </h1>
    <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
    Lorem ipsum dolor, sit amet consectetur adipisicing elit.
    Temporibus, expedita iusto veniam atque, magni tempora mollitia
    dolorum consequatur nulla, neque debitis eos reprehenderit quasi
    ab ipsum nisi dolorem modi. Quos?
    </p>
    </div>

    <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

    <div class="card bg-glass">
    <div class="card-body px-4 py-4 px-md-5">
         @using (Html.BeginForm("Login", "Client", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()



    <!-- Email input -->
    <div class="form-outline mb-4">
 @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = " entrer votre Email" })

    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
    @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })

    </div>


    <div class="row mb-4">
    <div class="col d-flex justify-content-center">
    <!-- Checkbox -->
    <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="form2Example31"
    checked />
    <label class="form-check-label" for="form2Example31"> Remember me </label>
    </div>
    </div>

    <div class="col">
    <!-- Simple link -->
    <a href="#!" style="color:43b8da">Forgot password?</a>
    </div>
    </div>
    <div class="d-flex justify-content-center">
   
       <input type="submit" name="submit" class="btn btn-block mb-4 text-white"
    style="background-color: #44006b" value="Login" />
    </div>
    <p class="small fw-bold">Don't have an account? <a asp-controller="Client"
    asp-action="Register" style="color:43b8da">Register</a></p>

}
    </div>
    </div>
    </div>
    </div>
    </div>
    </section> 

<!-- Section: Design Block -->
@model dotn.Models.UserModel;
<section class="background-radial-gradient ">
    <div class=" container text-center text-lg-start ">
    <div class="row align-items-center mb-5">
    <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
    <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
    The best offer <br />
    <span style="color: hsl(218, 81%, 75%)">for your business</span>
    </h1>
    <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
    Lorem ipsum dolor, sit amet consectetur adipisicing elit.
    Temporibus, expedita iusto veniam atque, magni tempora mollitia
    dolorum consequatur nulla, neque debitis eos reprehenderit quasi
    ab ipsum nisi dolorem modi. Quos?
    </p>
    </div>

    <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

    <div class="card bg-glass">
    <div class="card-body px-4 py-4 px-md-5">
    @using (Html.BeginForm("Register", "Client", FormMethod.Post))
    {
    //@Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <!-- 2 column grid layout with text inputs for the first and last names -->
    <div class="row">
    <div class="col-md-6 mb-4">
    <div class="form-outline">
    @Html.LabelFor(m => m.Name_User)
    @Html.TextBoxFor(m => m.Name_User, new { @class = "form-control", @placeholder = "Entrer Votre nom" })
    @Html.ValidationMessageFor(m => m.Name_User, "", new { @class = "badge badge-danger" })
    </div>
    </div>
    <div class="col-md-6 mb-4">
    <div class="form-outline">
    @Html.LabelFor(m => m.LastName_User)
    @Html.TextBoxFor(m => m.LastName_User, new { @class = "form-control", @placeholder = "Password" })
    @Html.ValidationMessageFor(m => m.LastName_User, "", new { @class = "badge badge-danger" })

    </div>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6 mb-4">
    <div class="form-outline">
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
    @if (ViewBag.error != null)
    {
    <span class="badge badge-danger">@ViewBag.error</span>
    }
    </div>
    </div>
    <div class="col-md-6 mb-4">
    <div class="form-outline">
    @Html.LabelFor(m => m.Phone)
    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "Password" })
    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "badge badge-danger" })

    </div>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6 mb-4">
    <div class="form-outline">
    @Html.LabelFor(m => m.Adress)
    @Html.TextBoxFor(m => m.Adress, new { @class = "form-control", @placeholder = "Password" })
    @Html.ValidationMessageFor(m => m.Adress, "", new { @class = "badge badge-danger" })
    </div>
    </div>
    <div class="col-md-6 mb-4">
    <div class="form-outline">
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })

    </div>
    </div>
    </div>





    <div class="d-flex justify-content-center">
   
     <input type="submit" name="submit" style="background-color: #44006b" class="btn btn-block mb-4 text-white" value="Register" />
    </div>
    <p class="small fw-bold">Don't have an account? <a asp-controller="Client"
    asp-action="Login" style="color:43b8da">Sign in</a></p>

    }

    </div>

    </div>
    </div>
    </div>
    </div>
    </section>

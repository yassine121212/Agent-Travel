@model IEnumerable<OffreModel>

@{
  ViewData["Title"] = "Display Offres Page";
}

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header justify-content-between d-flex align-items-center">
        <h4 class="card-title">Offres
        </h4>
      </div><!-- end card header -->
      <div class="card-body">
        <table class="table align-middle mb-0 bg-white">
          <thead class="bg-light">
            <tr>
              <th>Title</th>
              <th>Pays</th>
              <th>Ville</th>
              <th>Date of begin</th>
              <th>Date of end</th>
              <th>Price</th>
              <th>Partenaires</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt="" style="width: 45px; height: 45px"
                    class="rounded-circle" />
                    <div class="ms-3">
                      <p class="fw-bold mb-1" id="title1">@item.Title_Offre</p>
                      <p class="text-muted mb-0">john.doe@gmail.com</p>
                    </div>
                  </div>
                </td>
                <td id="pays">@item.Pays</td>
                <td id="ville">@item.City</td>

                <td>
                  <p class="fw-normal mb-1 " id="Tdatebegin">@item.Date_Begin</p>
                </td>
                <td>
                  <span id="Tdatefin" >@item.Date_End</span>
                </td>
                <td id="Tprix">@item.Price_Offre</td>
                <td>
                  ppppppppppppppppp
                </td>
                <td class="" style="">
                  <div class="d-flex justify-content-evenly align-items-center ">
                    <a asp-controller="Admin" asp-action="Edit_Offre" asp-route-id="@item.Id">
                      <i class="fa-solid fa-gear  trash1_class" id="gear" data-bs-toggle="modal"
                      data-bs-target="#exampleModal" style="cursor: pointer; color:#3A1B53"></i>
                    </a>
                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id">

                      <i class="fa-solid fa-trash close1_class" style="cursor: pointer; color:red"></i>
                    </a>

                  </div>
                </td>
              </tr>
            }


          </tbody>
        </table>
      </div>
      <!-- end card body -->
    </div>
    <!-- end card -->
  </div>
  <!-- end col -->
</div>
